{
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "./**/*.js",
      "options": {
        "parser": "babylon"
      }
    },
    {
      "files": "src/**/*.{scss,css}",
      "options": {
        "parser": "postcss",
        "semi": true
      }
    },
    {
      "files": "./**/*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    }
  ]
}
